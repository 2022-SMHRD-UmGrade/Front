<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMypage2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="@dimen/loginCardRadius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tvNickMypageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/tvNickMypageCard"
            android:textColor="@color/blueColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imgMypageProfile"
            app:layout_constraintStart_toStartOf="@+id/imgMypageProfile"
            app:layout_constraintTop_toBottomOf="@+id/imgMypageProfile" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMypageProfile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:src="@drawable/umbrella2"
            app:civ_circle_background_color="#C8C8C8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRatingTextMypageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/tvRatingTextMypageCard"
            app:layout_constraintBottom_toBottomOf="@+id/tvPointTextMypageCard"
            app:layout_constraintEnd_toEndOf="@+id/tvRatingMypageCard"
            app:layout_constraintStart_toStartOf="@+id/tvRatingMypageCard"
            app:layout_constraintTop_toTopOf="@+id/tvPointTextMypageCard" />

        <TextView
            android:id="@+id/tvRatingMypageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:gravity="left"
            android:text="@string/tvRatingMypageCard"
            android:textColor="@color/blueColor"
            app:layout_constraintBottom_toBottomOf="@+id/tvPointMypageCard"
            app:layout_constraintEnd_toStartOf="@+id/tvPointMypageCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPointMypageCard" />

        <TextView
            android:id="@+id/tvPointTextMypageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="right"
            android:text="@string/tvPointTextMypageCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvPointMypageCard"
            app:layout_constraintStart_toStartOf="@+id/tvPointMypageCard"
            app:layout_constraintTop_toBottomOf="@+id/tvPointMypageCard" />

        <TextView
            android:id="@+id/tvPointMypageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="left"
            android:text="@string/tvPointMypageCard"
            android:textColor="@color/blueColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/tvCouponTextMypageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/tvCouponTextMypageCard"
            app:layout_constraintBottom_toBottomOf="@+id/tvPointTextMypageCard"
            app:layout_constraintEnd_toEndOf="@+id/tvCouponMypageCard"
            app:layout_constraintStart_toStartOf="@+id/tvCouponMypageCard"
            app:layout_constraintTop_toTopOf="@+id/tvPointTextMypageCard" />

        <TextView
            android:id="@+id/tvCouponMypageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:gravity="left"
            android:text="@string/tvCouponMypageCard"
            android:textColor="@color/blueColor"
            app:layout_constraintBottom_toBottomOf="@+id/tvPointMypageCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPointMypageCard"
            app:layout_constraintTop_toTopOf="@+id/tvPointMypageCard" />

        <View
            android:id="@+id/divider"
            android:layout_width="390dp"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/btnProfileUpdate"
            tools:layout_editor_absoluteX="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/tvUserId"
            app:layout_constraintEnd_toEndOf="@+id/tvNickMypageCard"
            app:layout_constraintStart_toStartOf="@+id/tvNickMypageCard"
            app:layout_constraintTop_toBottomOf="@+id/tvNickMypageCard" />

        <Button
            android:id="@+id/btnProfileUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/blueColor"
            android:stateListAnimator="@null"
            android:text="@string/btnProfileUpdate"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="@+id/tvUserId"
            app:layout_constraintStart_toStartOf="@+id/tvUserId"
            app:layout_constraintTop_toBottomOf="@+id/tvUserId" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>