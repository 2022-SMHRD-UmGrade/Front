<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvusageHistoryListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/usageHistoryListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="left"
            android:text="@string/tvRental"
            android:textColor="@color/blueColor"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/historyListImg"
            app:layout_constraintTop_toTopOf="@+id/historyListImg" />

        <TextView
            android:id="@+id/tvUmgSeq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/tvUmgSeq"
            android:textAlignment="center"
            android:textColor="@color/blueColor"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvReturnLoc"
            app:layout_constraintEnd_toEndOf="@+id/tvRentalFare" />

        <TextView
            android:id="@+id/tvRentalFare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="right"
            android:text="@string/tvRentalFare"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="@string/tvReturn"
            android:textColor="@color/blueColor"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDash"
            app:layout_constraintStart_toEndOf="@+id/tvDash"
            app:layout_constraintTop_toTopOf="@+id/tvDash" />

        <TextView
            android:id="@+id/tvDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="@string/tvDash"
            android:textColor="@color/blueColor"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvRental"
            app:layout_constraintStart_toEndOf="@+id/tvRental"
            app:layout_constraintTop_toTopOf="@+id/tvRental" />

        <ImageView
            android:id="@+id/historyListImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/closed_umbrella" />

        <TextView
            android:id="@+id/tvRentalLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tvRentalLoc"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/tvRental"
            app:layout_constraintTop_toBottomOf="@+id/tvRental" />

        <TextView
            android:id="@+id/tvReturnLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:text="@string/tvReturnLoc"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvRentalLoc"
            app:layout_constraintTop_toBottomOf="@+id/tvRentalLoc" />

        <TextView
            android:id="@+id/tvWon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvWon"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvRentalFare"
            app:layout_constraintEnd_toStartOf="@+id/tvRentalFare"
            app:layout_constraintTop_toTopOf="@+id/tvRentalFare" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>